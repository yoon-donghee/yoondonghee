    function showPlayer(key) {
      const p = players[key];
      const dates = getRecentDates(p.stats.length);

      let statsTable = "";

      if (p.type === "타자") {
        statsTable = `
          <h3>최근 5경기 성적</h3>
          <table>
            <tr><th>경기일</th><th>타격</th><th>타점</th><th>득점</th></tr>
            ${p.stats.map((row, i) => `
              <tr>
                <td>${dates[i]}</td>
                <td>${row[0]}</td>
                <td>${row[1]}</td>
                <td>${row[2]}</td>
              </tr>`).join("")}
          </table>
        `;
      } else if (p.type === "투수") {
        statsTable = `
          <h3>최근 5경기 성적</h3>
          <table>
            <tr><th>경기일</th><th>이닝</th><th>피안타</th><th>탈삼진</th><th>자책점</th></tr>
            ${p.stats.map((row, i) => `
              <tr>
                <td>${dates[i]}</td>
                <td>${row[0]}</td>
                <td>${row[1]}</td>
                <td>${row[2]}</td>
                <td>${row[3]}</td>
              </tr>`).join("")}
          </table>
        `;
      }

      const videoEmbed = `
        <h3>하이라이트 영상</h3>
        <div class="video-container">
          <iframe src="${p.video}" allowfullscreen allow="accelerometer; autoplay; clipboard-write; encrypted-media; gyroscope; picture-in-picture"></iframe>
        </div>
      `;

      document.getElementById('player-info').innerHTML = `
        <h2>${p.name}</h2>
        <p><strong>등번호:</strong> ${p.number}</p>
        <p><strong>포지션:</strong> ${p.position}</p>
        <p><strong>생년월일:</strong> ${p.birth}</p>
        <p><strong>출신학교:</strong> ${p.school}</p>
        <p><strong>소개:</strong> ${p.intro}</p>
        ${statsTable}
        ${videoEmbed}
      `;
    }
  </script>

