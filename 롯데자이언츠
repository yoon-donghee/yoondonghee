  <script>
    function getRecentDates(count = 5) {
      const today = new Date();
      return Array.from({length: count}, (_, i) => {
        const d = new Date(today);
        d.setDate(today.getDate() - i);
        return `${('0' + (d.getMonth() + 1)).slice(-2)}.${('0' + d.getDate()).slice(-2)}`;
      });
    }

    const players = {
